<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etNoteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/note_title_hint"
        android:textStyle="normal"
        android:textColor="@color/primaryText"
        android:inputType="text"
        android:minHeight="48dp"
        tools:ignore="VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/etNoteContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:autofillHints=""
        android:hint="@string/note_content_hint"
        android:inputType="textMultiLine"
        android:lines="3"
        android:minLines="3"
        android:scrollbars="vertical"
        android:overScrollMode="ifContentScrolls"
        android:padding="8dp"
        android:background="@drawable/bg_rounded_rectangle_outlined"
        android:gravity="top|start"
        android:textStyle="normal"
        android:imeOptions="actionDone"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/category_label"
        android:textStyle="bold"
        android:textColor="@color/secondaryText"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        android:background="@drawable/bg_rounded_rectangle_underlined"
        android:backgroundTint="@color/gray"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="7dp"
        android:popupBackground="@drawable/bg_rounded_rectangle"
        android:spinnerMode="dropdown"
        style="@style/Widget.AppCompat.Spinner.Underlined"/>

    <TextView
        android:id="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/tags_label"
        android:textStyle="bold"
        android:textColor="@color/secondaryText"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:focusable="false"
        android:hint="@string/pick_tags_hint"
        android:inputType="text"
        android:minHeight="48dp"
        tools:ignore="VisualLintTextFieldSize" />

</LinearLayout>