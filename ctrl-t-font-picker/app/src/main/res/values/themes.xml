<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.FontPicker" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <!-- The final theme we use -->
    <style name="Theme.FontPicker" parent="NightAdjusted.Theme.FontPicker">
        <item name="android:forceDarkAllowed" tools:targetApi="29" tools:ignore="ObsoleteSdkInt">false</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27" tools:ignore="ObsoleteSdkInt">true</item>
    </style>

    <style name="Theme.FontPicker.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.FontPicker</item>
    </style>
</resources>
